@model Employee

<div style="border: 2px solid red">
    <p>ID: @Model.EmployeeID</p>
    <p>Name: @Model.Name</p>
    <p>Hours: @Model.Hours</p>
    <p>Title: @Model.Title</p>
</div>
<p>Do you want to delete this Employee?</p>
@using (Html.BeginForm("Index", "Employee"))
{
    <input type="submit" value="No "/>
}

@using (Html.BeginForm("DeleteUser", "Employee", FormMethod.Post))
{
    <input type="submit" value="Yes" asp-route-EmployeeID="@Model.EmployeeID" />
}